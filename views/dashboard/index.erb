<h1>Dashboard</h1>
<span class="label label-info"><%= Time.now.to_s %></span>
<a href="/software" class='pull-right btn btn-default btn-menu' title="Software Update">
	<span class="glyphicon glyphicon-cloud-download" aria-hidden="true"></span>
</a>
<a href="/firmware" class='pull-right btn btn-default btn-menu' title="Program ESP8266">
	<span class="glyphicon glyphicon-save" aria-hidden="true"></span>
</a>
<a href="/network" class='pull-right btn btn-default btn-menu' title="Network Settings">
	<span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
</a>
<br/><br/>

<% @sensors.each do |sensor| %>
<div class="alert <%= sensor.alive? ? 'alert-success' : 'alert-danger' %>" role="alert">
  <%= sensor.to_s %>: <strong><%= sensor.last_formatted_value %></strong>

  <a href="/sensor/edit/<%= sensor.id %>" class='action-link btn btn-default'>
  	<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  </a>

  <form method="post" action="/sensor/delete/<%= sensor.id %>" class="action-form" data-confirm="Are you sure?">
  <button class='action-link btn btn-default'>
  	<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  </button>
  </form>

</div>
<% end %>
<script type="text/javascript">
	setTimeout(function() { window.location.reload() }, 30000);
</script>
