<% @actuators.each do |actuator| %>
<div class="alert <%= actuator.alive? ? 'alert-success' : 'alert-danger' %>" role="alert">
  <%= actuator.to_s %>&nbsp;
  <% case actuator.actuator_type 
     when 'Switch' %>
     <input type="checkbox" name="sw-<%= actuator.id %>" class="switch" data-id="<%= actuator.id %>" data-size="small" <%= actuator.value_set.to_i > 0 ? "checked" : "" %>>
  <% else %> 
  <strong><%= actuator.value %></strong>
  <% end %>

  <a href="/actuator/edit/<%= actuator.id %>" class='action-link btn btn-default'>
  	<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  </a>

  <form method="post" action="/actuator/delete/<%= actuator.id %>" class="action-form" data-confirm="Are you sure?">
  <button class='action-link btn btn-default'>
  	<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  </button>
  </form>

</div>
<% end %>
